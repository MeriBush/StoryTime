@model IEnumerable<StoryTime.Models.StorySubmissionListItem>

@{
    ViewBag.Title = "AdminIndex";
}

<center><h2 class="font">Submitted Assignments</h2></center>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="index">
    <p class="font">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr class="font">
            <th>
                @Html.DisplayNameFor(model => model.StoryId)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.StudentId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoryTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedUtc)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoryId)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.StudentId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoryTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StoryId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StoryId })
                </td>
            </tr>

        }
    </table>
</div>
