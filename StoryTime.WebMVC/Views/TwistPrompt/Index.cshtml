@model IEnumerable<StoryTime.Models.TwistPromptListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Plot Twist Index</h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

    <div class="index">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TwistId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Twist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedUtc)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TwistId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Twist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedUtc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TwistId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TwistId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TwistId })
                    </td>
                </tr>
            }

        </table>
    </div>