@model StoryTime.Models.TwistPromptEdit

@{
    ViewBag.Title = "Edit";
}

<center><h2 class="font">Edit Plot Twist</h2></center>

<div class="index">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TwistId)

            <div class="form-group">
                @Html.LabelFor(model => model.Twist, htmlAttributes: new { @class = "control-label col-md-2 font" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Twist, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Twist, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default font" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
